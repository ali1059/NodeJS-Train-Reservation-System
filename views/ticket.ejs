<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="/css/ticket.css">
  <title> Ticket</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <script defer src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>
</head>

<body>

  <div class="ticket-card">
    <div class="ticket-card-header">
      <div class="ticket-card-header-logo">
        <img src="images/train.png" alt="logo" width="60px">
        <h4>Train Time</h4>
      </div>
      <div class="ticket-card-header-details">
        <div class="details-user">
          <span class="detail-title">Name</span>
          <span class="detail-text"><%=Name%></span>
        </div>

        <div class="details-depart">
          <span class="details--title">Departs</span>
          <span class="details--text"><%=Dtime%></span>
        </div>

        <div class="details-arrival">
          <span class="details--title">Arrival</span>
          <span class="details--text"><%=Atime%></span>
        </div>
      </div>
    </div>

    <div class="ticket-card-body">

      <div class="train-from">
        <span class="code"><%=fromshort%></span>
        <span class="city"><%=From%></span>
      </div>

      <div class="train-img">
        <i class="fas fa-train fa-3x"></i>
      </div>

      <div class="train-to">
        <span class="code"><%=toshort%></span>
        <span class="city"><%=To%></span>
      </div>

      <div class="ticket-card-body-text">
        <div class="text-left">
          <span class="field">Train No</span>
          <span class="field-value"><%=TrainNo%></span>
        </div>
        <div class="text-right">
          <span class="field">Type</span>
          <span class="field-value"><%= Type %></span>
        </div>

      </div>

      <div class="ticket-card-body-text">
        <div class="text-left">
          <span class="field">seats</span>
          <span class="field-value"><%=Seats%></span>
        </div>
        <div class="text-right">
          <span class="field">Phone</span>
          <span class="field-value"><%=MobileNo%></span>
        </div>

      </div>

      <div class="ticket-card-body-text">
        <div class="text-left">
          <span class="field">date</span>
          <span class="field-value"><%=Date%></span>
        </div>
        <div class="text-right">
          <span class="field">bookingid</span>
          <span class="field-value"><%=bookid%></span>
        </div>

      </div>

    </div>

  </div>

  <button class="btn btn-primary btn-lg" type="button" id="down" name="download">HOME</button>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script type="text/javascript">
    for (var i = 1; i < 6; i++) {
      $("#down").fadeOut().fadeIn().animate({
        right: '200px'
      }, 1000);
      $("#down").on("mouseover", function() {
        $("#down").css("background", "#15cda8");
      });

    }


    $("#down").on("click", function() {
      window.location.href = '/home';
    });
  </script>

</body>

</html>
